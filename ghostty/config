# Ghostty Terminal Configuration - Vesper Theme
# Peppermint & orange flavored dark theme with hidden tabs

# Font Configuration
font-family = "GohuFont 14 Nerd Font Mono"
font-size = 16
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = calt

# Background transparency (80% opacity = 0.8)
background-opacity = 0.8

# Vesper Theme Colors (Official Palette)
background = 101010
foreground = ffffff

# Black
palette = 0=#101010
palette = 8=#505050

# Red
palette = 1=#ff8080
palette = 9=#ff8080

# Green
palette = 2=#80d9c7
palette = 10=#80d9c7

# Yellow
palette = 3=#ffc799
palette = 11=#ffc799

# Blue
palette = 4=#65737e
palette = 12=#8b8b8b

# Magenta
palette = 5=#ffcfa8
palette = 13=#ffcfa8

# Cyan
palette = 6=#99ffe4
palette = 14=#99ffe4

# White
palette = 7=#a0a0a0
palette = 15=#ffffff

# Cursor
cursor-color = ffc799
cursor-style = block
cursor-style-blink = true

# Selection
selection-background = 2a2a2a
selection-foreground = ffffff

# Window settings
window-padding-x = 4
window-padding-y = 4
window-theme = dark

# Hide tabs completely
gtk-tabs-location = hidden
macos-titlebar-style = tabs
	
# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Mouse
mouse-hide-while-typing = true

# Performance
resize-overlay = never
window-vsync = true

# Advanced Visual Effects
background-blur = true
window-step-resize = true
window-save-state = always
window-inherit-working-directory = true
window-inherit-font-size = true
unfocused-split-opacity = 0.7

# Scrollback & History
scrollback-limit = 100000000
link-url = true
mouse-scroll-multiplier = 3

# Terminal Behavior
bold-is-bright = true
term = xterm-256color
focus-follows-mouse = true

# Image Support
image-storage-limit = 1000000000

# Font Rendering
freetype-load-flags = no-hinting
window-height = 9999
window-width = 9999

# Tab Navigation
keybind = cmd+shift+h=previous_tab
keybind = cmd+shift+l=next_tab

# Split Navigation
keybind = cmd+ctrl+h=goto_split:left
keybind = cmd+ctrl+j=goto_split:bottom
keybind = cmd+ctrl+k=goto_split:top
keybind = cmd+ctrl+l=goto_split:right
